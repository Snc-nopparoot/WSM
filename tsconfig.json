{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strictPropertyInitialization": false,
      "baseUrl": "src",
      "paths": { // path alias
        "@interfaces/*": ["interfaces/*"],
        "@domain/*": ["domain/*"],
        "@infrastructure/*": ["infrastructure/*"],
      }
    }
  }
  